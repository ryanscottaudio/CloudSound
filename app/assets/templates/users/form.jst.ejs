<div class="sign-in-bar group">
  <a class="ULC-logo group" href="#">
    <span class="logo"></span>
    <span class="title">CloudSound</span>
  </a>
  <ul class="tabs group">
    <li class="first">
      <a class="sign-in-tab" href="#">Sign in</a>
    </li>
    <li>
      <a class="selected create-account-tab" href="#">Create account</a>
    </li>
  </ul>
</div>

<div class="sign-in-buttons group">
  <a class="fb" href='auth/facebook'>Sign in with Facebook</a>
  <a class="guest" href='#'>Sign in as a guest</a>
</div>

<div class="sign-in-barrier">
  <span>or</span>
</div>

<form class="sign-in group">

  <h3 class="errors error-message"></h3>

  <label class="sign-in-input-text" for="email">What's your email address?</label><br>
  <input class="cs-input" maxlength="255" id="email" type="text" name="user[email]" value="<%= user.escape('email') %>"> <br>
  <h3 class="errors-email error-message"></h3>

  <div class="floated-input">
    <label class="sign-in-input-text" for="password">Choose a password</label><br>
    <input class="cs-input small" id="password" type="password" name="user[password]" value=""> <br>
    <h3 class="errors-password error-message"></h3>
  </div>

  <div class="floated-input last">
    <label class="sign-in-input-text" for="password_confirmation">Re-type password</label><br>
    <input class="cs-input small" id="password_confirmation" type="password" name="user[password_confirmation]" value=""> <br>
    <h3 class="errors-password-confirm error-message"></h3>
  </div>

  <input id="terms_agree" type="checkbox" name="user[agree]">
  <label class="sign-in-checkbox-text" for="terms_agree">I agree to the Terms of Use and Privacy Policy
  </label>
  <h3 class="errors-checkbox error-message"></h3>

  <div class="form-buttons">
    <a href="#" class="cancel-link">Cancel</a>
    <button>Create account</button>
  </div>

</form>
