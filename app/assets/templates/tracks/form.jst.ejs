<div class="header"></div>

<form class="trackForm">

  <h3 class="errors error-message" ></h3>

  <label class="sign-in-input-text">
    Audio
  </label>
    <input type="file" name="track[audio]" id='input-post-audio'>
    <h3 class="errors-audio error-message"></h3>


  <div id="preview-post-audio"></div>



  <label class="sign-in-input-text">
    Picture
  </label>
    <input type="file" name="track[image]" id='input-post-image'>



  <img src="" id="preview-post-image" class="preview-image" width="300" height="300">



  <label class="sign-in-input-text">
    Title
  </label>
    <input type="text" class="cs-input" name="track[title]" id='input-post-title' value="<%= track.get('title') %>">
    <h3 class="errors-title error-message"></h3>


  <label class="sign-in-input-text">
    URL
  </label>
    <input type="text" class="cs-input" name="track[url]" id='input-post-url' value="<%= track.get('url') %>">
    <h3 class="errors-url error-message"></h3>


  <label class="sign-in-input-text">
    Description
  </label>
    <input type="text" class="cs-input" name="track[description]" id='input-post-description' value="<%= track.get('description') %>">



